#######################################################################
#
# DESCRIPTION
# 
# Central ICDE tcl file for loading all the necessary TCL packages
#
#######################################################################

set icde_tcl_packages "gui util core"
foreach pkg $icde_tcl_packages {
  set initfile "$icde_install_path/tcl/$pkg/$pkg.tcl";
  if { [file exists $initfile] } {
    source $initfile
  } else {
    puts "Error: Missing package initialization file $initfile"
  }
}

# Use TCLReadLine package to handle auto completion and history 
# for interactive sessions
if { $tcl_interactive } {
  TclReadLine::interact
}

